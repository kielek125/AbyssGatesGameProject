<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.messanger.firebase.malavero.abyssgates.RegisterYourAccount">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backgroundRegisterYourAccount"
        android:scaleType="fitXY"
        android:src="@drawable/backgroundlogin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/loginRegisterYourAccountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/passwordRegisterYourAccountEditText" />

    <EditText
        android:id="@+id/emailRegisterYourAccountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/loginRegisterYourAccountEditText"
        android:layout_alignStart="@+id/passwordRegisterYourAccountEditText" />

    <EditText
        android:id="@+id/passwordRegisterYourAccountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/loginRegisterYourAccountImageView"
        android:layout_toEndOf="@+id/passwordRegisterYourAccountImageView" />

    <ImageView
        android:id="@+id/emailRegisterYourAccountImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/emailRegisterYourAccountEditText"
        android:layout_marginStart="122dp"
        android:src="@drawable/youremail" />

    <ImageView
        android:id="@+id/loginRegisterYourAccountImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailRegisterYourAccountImageView"
        android:layout_below="@+id/emailRegisterYourAccountEditText"
        android:src="@drawable/yourlogin" />

    <ImageView
        android:id="@+id/passwordRegisterYourAccountImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/loginRegisterYourAccountImageView"
        android:layout_alignTop="@+id/passwordRegisterYourAccountEditText"
        android:src="@drawable/yourpassword" />

    <ImageView
        android:id="@+id/registerYourAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="registerAccount"
        android:src="@drawable/register"
        android:layout_below="@+id/passwordRegisterYourAccountImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

</RelativeLayout>
